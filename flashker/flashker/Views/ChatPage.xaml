<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="flashker.Views.ChatPage"
             Title="{Binding UserName}">
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding Messages}" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Vertical" Padding="5">
                                <Image Source="{Binding ImagePath}" IsVisible="{Binding HasImage}" HeightRequest="200" />
                                <Label Text="{Binding Text}" 
                                       BackgroundColor="{Binding BackgroundColor}" 
                                       HorizontalOptions="{Binding Alignment}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <StackLayout Orientation="Horizontal" Padding="5">
                <Entry x:Name="MessageEntry" Placeholder="Wpisz wiadomość..." HorizontalOptions="FillAndExpand" />
                <Button Text="Wyślij" Clicked="OnSendMessage" />
            </StackLayout>
            <StackLayout Orientation="Horizontal" Padding="5">
                <Button Text="Wybierz obraz" Clicked="OnPickImageFromGallery" />
                <Button Text="Zrób zdjęcie" Clicked="OnTakePhoto" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
