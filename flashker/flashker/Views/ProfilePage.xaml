<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="flashker.Views.ProfilePage"
             Title="Profil Użytkownika">

    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="15">

            <!-- Zdjęcie profilowe użytkownika -->
            <Frame WidthRequest="150" HeightRequest="150" CornerRadius="75" HorizontalOptions="Center" HasShadow="true">
                <Image x:Name="ProfileImage" Aspect="AspectFill" WidthRequest="150" HeightRequest="150"/>
            </Frame>

            <!-- Nazwa użytkownika -->
            <Label x:Name="UserNameLabel" 
                   FontSize="Large" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />

            <!-- Przyciski do akcji -->
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button Text="Edytuj Profil" 
                        FontAttributes="Bold" 
                        BackgroundColor="#3498db" 
                        TextColor="White" 
                        WidthRequest="120"
                        Margin="5"/>
            </StackLayout>

            <!-- Informacje użytkownika -->
            <StackLayout Padding="10" Spacing="10">
                <Label Text="Informacje kontaktowe" 
                       FontSize="Medium" 
                       FontAttributes="Bold" />

                <!-- Email -->
                <StackLayout Orientation="Horizontal">
                    <Label Text="Email:" WidthRequest="100" FontAttributes="Bold" />
                    <Label x:Name="EmailLabel" />
                </StackLayout>

                <!-- Telefon -->
                <StackLayout Orientation="Horizontal">
                    <Label Text="Telefon:" WidthRequest="100" FontAttributes="Bold" />
                    <Label x:Name="PhoneLabel" />
                </StackLayout>

                <!-- Lokacja -->
                <StackLayout Orientation="Horizontal">
                    <Label Text="Lokalizacja:" WidthRequest="100" FontAttributes="Bold" />
                    <Label x:Name="LocationLabel" />
                </StackLayout>
            </StackLayout>

            <!-- Opis użytkownika -->
            <StackLayout Padding="10">
                <Label Text="O mnie" 
                       FontSize="Medium" 
                       FontAttributes="Bold" />
                <Label x:Name="AboutLabel" 
                       FontSize="Small" 
                       TextColor="Gray" />
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
